# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000

# MongoDB Atlas - Substituir pela sua connection string
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/
MONGODB_DATABASE=audio_transcription

# MySQL Laravel - Configurar para seu banco Laravel
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=senha_mysql
MYSQL_DATABASE=nome_do_banco_laravel

# Configurações Whisper
WHISPER_MODEL=turbo
WHISPER_DEVICE=cuda

# Configurações Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Configurações de processamento
MAX_CONCURRENT_JOBS=3
AUDIO_FILE_MAX_SIZE=50MB

# Logs
LOG_LEVEL=INFO